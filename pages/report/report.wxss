.container button{
  width: 370rpx;
  border-radius:48rpx;
  border:1px solid rgb(252,158,178);
  color: rgb(252,158,178);
  background-color:rgb(255,255,255);
}
.report-body{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 30rpx;
  border: 1px solid gray;
  margin: 20rpx;
  border-radius: 34rpx
}
.report-value{

  left: 10rpx;
  top: 0;
  padding: 10rpx 20rpx;
  background-color: #FFCD82;
  color: #FFF;
  border-radius: 30rpx;
  font-size: 32rpx;
  width: 88rpx;
}
.report-school{
  padding-top: 15rpx;
}
.grade-row{
  display: flex;
  justify-content: space-around;
  font-size: 0.85em;
  color: gray;
  flex-wrap: wrap;
  padding-top: 13rpx;
}