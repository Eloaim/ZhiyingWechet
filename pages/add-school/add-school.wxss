.container {
  padding: 0 16rpx;
}
.school-item {
  border-top: 3rpx solid #E1E1E1;
  padding: 10rpx 18rpx;
}
.school-item:last-child {
  border-bottom: 3rpx solid #E1E1E1;
}
.title {
  font-size: 38rpx;
  font-weight: bold;
  
}
.nature {
  display: flex;
  font-size: 32rpx;
  color: gray;
  padding: 18rpx 0;
}
.nature-1 {
  flex: 1;
}
.nature-2 {
  flex: 3;
}
.grade {
  display: flex;
  font-size: 32rpx;
  color: gray;
  padding: 10rpx 0;
  flex-wrap: wrap;
}
.grade-item {
  width: 50%;
}
.noschool{
  display: flex;
  justify-content: center;
  padding-top: 300rpx;
  font-size: 0.85em;
  color: gray; 
}
.description{
  padding-top: 25rpx;
}
.description text{
  display: flex;
  color: gray;
  font-size: 0.85em;
  justify-content: center;
}